<!-- app/views/sessions/new.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Form</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', integrity: 'sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin: 'anonymous' %>
   <%= stylesheet_link_tag 'application', 'shared', media: 'all', 'data-turbolinks-track': 'reload' %>

  
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <!-- Left Column (Company Description) -->
      <div class="col-md-6"  style="background-color: #f9fafc;">

        <%= render partial: 'shared/company_description', locals: { title: "Manage Your Company With :"} %>
      </div>

      <!-- Right Column (Login Form) -->
      <div class="col-md-6">
      	
        <%= render 'sessions/form', form_title: "Login", form_submit_text: "Login", form_submit_class: "btn btn-primary", form_path: login_path, form_link_text: "Or", form_link_path: signup_path %>
  
      </div>
    </div>
  </div>
    <script>
    function togglePassword() {
    	
     const passwordField = document.getElementById('inputPassword1');
  const toggleButton = document.querySelector('.toggle-password');

  if (passwordField && toggleButton) {
   
      const fieldType = passwordField.getAttribute('type');
      const newFieldType = fieldType === 'password' ? 'text' : 'password';
      passwordField.setAttribute('type', newFieldType);
      toggleButton.querySelector('i').classList.toggle('fa-eye');
      toggleButton.querySelector('i').classList.toggle('fa-eye-slash');
   
  }
    }

  </script>
</body>
</html>
