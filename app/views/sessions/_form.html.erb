<!-- app/views/sessions/_form.html.erb -->
<div class="vh-100 d-flex justify-content-center align-items-center">
  <div class="p-5 shadow-sm bg-white" style="width:80%!important">
      <% if flash.now[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash.now[:alert] %>
  </div>
<% end %>
    <h2 class="text-center mb-4 text-primary"><%= form_title %></h2>

    <%= form_with(url: form_path, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :email, raw('<span class="required">*</span> Email'), class: "form-label" %>
         <div class="input-container form-control border focuscolor">
   
       
        <i class="fa fa-envelope icon"></i>
        <%= form.email_field :email, class: "input-field", id: "exampleInputEmail1", aria_describedby: "emailHelp" %>
      </div>
      </div>
      <div class="mb-3">
        <%= form.label :password, raw('<span class="required">*</span> Password'), class: "form-label" %>
         <div class="input-container form-control border focuscolor">
   
       
        <i class="fa fa-key icon"></i>
        <%= form.password_field :password, class: "input-field", id: "inputPassword1" %>
     <div class="input-group-append">
    <button class="toggle-password" onclick="togglePassword()" type="button">
      <i class="fa fa-eye-slash"></i>
    </button>
   
  </div>
      </div>
      </div>
       <div class="row justify-content-between align-items-center">
   
    <div class="col-auto">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="rememberMeCheckbox">
        <label class="form-check-label" for="rememberMeCheckbox">
          Remember me
        </label>
      </div>
    </div>
     <div class="col-auto">
      <p class="small mb-0">
        
        <%= link_to "Forgot Password?", forgot_password_path, class: "text-primary" %>
      </p>
    </div>
  </div>

     
      <div class="d-grid">
        <%= form.submit form_submit_text, class: form_submit_class %>
      </div>
    <% end %>
    <div class="mt-3">
     <p class="mb-0">
  <%= form_link_text %> <%= link_to "Register Now!", signup_path, class: "text-primary fw-bold" %>
</p>
    </div>
  </div>
</div>
