<!-- app/views/users/_form.html.erb -->
<div class="vh-100 d-flex justify-content-center align-items-center">
  <div class="p-2 bg-white" style="width:60%">
    <% if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>
    <h2 class="text-center mb-4"><%= form_title %></h2>
    
    <%= form_with(model: @user, local: true) do |form| %>
      <div class="mb-3">
          <%= form.label :name, raw('<span class="required">*</span> Name'), class: "form-label" %>
        <div class="input-container form-control border focuscolor">
    <i class="fa fa-user icon"></i>
      
        <%= form.text_field :name, class: "input-field", id: "inputName" %>
      </div>
</div>
      <div class="mb-3" >
          <%= form.label :email, raw('<span class="required">*</span> Email'), class: "form-label" %>
        <div class="input-container form-control border focuscolor">
   
      
         <i class="fa fa-envelope icon"></i>
        <%= form.email_field :email, class: "input-field", id: "inputEmail" %>
      </div>
</div>
      <div class="mb-3">
         <%= form.label :password, raw('<span class="required">*</span> Password'), class: "form-label" %>
         <div class="input-container form-control border focuscolor">
   
       
        <i class="fa fa-key icon"></i>
  <%= form.password_field :password, class: "input-field", id: "inputPassword2", autocomplete: "off" %>
   <div class="input-group-append">
    <button class="toggle-password" onclick="togglePassword()" type="button">
      <i class="fa fa-eye-slash"></i>
    </button>
  </div>
</div>
      </div>

      <div class="mb-3">
        <%= form.label :country, raw('<span class="required">*</span> Country'), class: "form-label" %>
        <%= form.select :country, ['USA', 'Canada', 'UK', 'Australia'], {}, class: "form-control border focuscolor", id: "inputCountry" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Register", class: "btn btn-primary" %>

      </div>
    <% end %>
    <div class="mt-3">
     <p class="mb-0">
  <%= form_link_text %> <%= link_to "Already Have Account Login", login_path, class: "text-primary fw-bold" %>
</p>
    </div>
  </div>
</div>
