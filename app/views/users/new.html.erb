<!-- app/views/users/new.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', integrity: 'sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin: 'anonymous' %>

   <%= stylesheet_link_tag 'application', 'shared','sessions', media: 'all', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
 
  
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <!-- Left Column (Company Description) -->
      <div class="col-md-6" style="background-color: #f9fafc;">
        <%= render partial: 'shared/company_description', locals: { title: "Manage Your Company With :"} %>
      </div>

      <!-- Right Column (Registration Form) -->
      <div class="col-md-6">
          <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
        <%= render 'users/form', form_title: "Sign Up", form_submit_text: "Register", form_submit_class: "btn btn-primary", form_path: signup_path, form_link_text: "Or", form_link_path: login_path %>
      </div>
    </div>
  </div>
  <script>
    function togglePassword() {
     const passwordField = document.getElementById('inputPassword2');
  const toggleButton = document.querySelector('.toggle-password');

  if (passwordField && toggleButton) {
    // toggleButton.addEventListener('click', () => {
      const fieldType = passwordField.getAttribute('type');
      const newFieldType = fieldType === 'password' ? 'text' : 'password';
      passwordField.setAttribute('type', newFieldType);
      toggleButton.querySelector('i').classList.toggle('fa-eye');
      toggleButton.querySelector('i').classList.toggle('fa-eye-slash');
    // });
  }
    }
  </script>
</body>
</html>
