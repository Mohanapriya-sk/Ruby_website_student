<!-- app/views/sessions/new.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Form</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', integrity: 'sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin: 'anonymous' %>
   <%= stylesheet_link_tag 'application', 'shared', media: 'all', 'data-turbolinks-track': 'reload' %>

  
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <!-- Left Column (Company Description) -->
      <div class="col-md-6"  style="background-color: #f9fafc;">

        <%= render partial: 'shared/company_description', locals: { title: "Manage Your Company With :"} %>
      </div>

      <!-- Right Column (Login Form) -->
      <div class="col-md-6">
      	
   <!-- app/views/sessions/_form.html.erb -->
<div class="vh-100 d-flex justify-content-center align-items-center">
  <div class="p-5 shadow-sm bg-white" style="width:80%!important">
 <% flash.each do |key, value| %>
  <div class="alert alert-danger">
    <%= value %>
  </div>
<% end %>  
    <h2 class="text-center mb-4 text-primary">Forgot Password</h2>

   <%= form_with(url: forgot_password_send_path, method: :post) do |form| %>
      <div class="mb-3">
        <%= form.label :email, raw('<span class="required">*</span> Email'), class: "form-label" %>
         <div class="input-container form-control border focuscolor">
   
       
        <i class="fa fa-envelope icon"></i>
        <%= form.email_field :email, class: "input-field", id: "exampleInputEmail1", aria_describedby: "emailHelp" %>
      </div>
      </div>
    
    

     
      <div class="d-grid">
        
         <%= form.submit 'Request New Password', class: 'btn btn-primary mt-3' %>
<% end %>
      </div>
    
    <div class="mt-3">
     <p class="mb-0">
Or <%= link_to "Already Have Account Login", login_path, class: "text-primary fw-bold" %>
</p>
    </div>
  </div>
</div>

  
      </div>
    </div>
  </div>
    <script>
  

  </script>
</body>
</html>
